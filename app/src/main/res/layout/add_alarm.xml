<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Alarm"
                android:textSize="45dp"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_left"
                android:textColor="#ffffff"/>


            <Button
                android:id="@+id/add_list_btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="#04c2c2c2"
                android:text="Creat"
                android:textSize="20dp"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="3dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/dinner"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/noon"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"></LinearLayout>

        <Button
            android:id="@+id/set_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="상황 설정"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#ffffff"></LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="#00000000"
            android:text="반복 설정"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:id="@+id/button_r"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#ffffff"></LinearLayout>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:timePickerMode="spinner"
            android:numbersBackgroundColor="#ffffff">

        </TimePicker>



</LinearLayout>